<%- include('menu') -%>
		<title>Elado autok</title>
	<div class="container main-content">
		<form action="/" method="get">
		<div class="card-hearder" style="padding-left:750px;">
			<label>Rendezés:</label>
				<select name="sel" size=1>
					<option value="datum DESC">Új hirdetések elöl</option>
					<option value="datum ASC">Régi hirdetések elöl</option>
					<option value="termek ASC">Termék [A - Z]</option>
					<option value="termek DESC">Termék [Z - A]</option>
					<option value="egysegar ASC">Ár szerint növekvő</option>
					<option value="egysegar DESC">Ár szerint csökkenő</option>
					<input type="submit" class="btn btn-sm btn-light" style="text-align:center; margin-bottom:8px;" value="OK" name="ok"/>
				</select>
		</div>
		</form>
		<div class="container footer-content">
			<table class="table table-striped table-md">
				<thead class="bg-light" >
					<tr>
						<th id="pad" colspan="2" style="border-top:solid #dee2e6;">Cím</th>
						<th id="pad" style="border-top:solid #dee2e6;">Ár</th>
						<th id="pad" style="border-top:solid #dee2e6;">Állapot</th>
						<th id="pad" style="border-top:solid #dee2e6;">Település</th>
						<th id="pad" style="border-top:solid #dee2e6; border-right:solid #dee2e6;" colspan="2">Dátum</th>
					</tr>
				</thead>
				<tbody>
				<% for (advertising in ads) { %>
					<tr>
						<td id="pad" colspan="2" style="border-bottom:solid #dee2e6;"><%= advertising.title %></td>
						<td id="pad" style="border-bottom:solid #dee2e6;"><%= advertising.price %> Ft</td>
						<td id="pad" style="border-bottom:solid #dee2e6;"><%= advertising.state %></td>
						<td id="pad" style="border-bottom:solid #dee2e6;"><%= advertising.city %></td>
						<td id="pad" style="border-bottom:solid #dee2e6; border-right:solid #dee2e6; width:190px;"><%= advertising.date %></td>
						<td style="border-bottom:solid #dee2e6; border-right:solid #dee2e6; text-align:center;"><a class="btn btn-succes btn-sm bg-light"  style="border:1px solid #dee2e6; width:82px; color:green;" href="/hirdetes/<%= advertising.id %>">Megnézem</a></td>
					</tr>
				<% }; %>
				</tbody>
			</table>
		</div>
		<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
	</div>
</body>
		<%- include('footer') -%>
</html>
