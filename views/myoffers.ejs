<%- include('menu') -%>
	<div class="container main-content">
		<title>Hirdetéseim</title>
	</div>
	<div class="footer-content container">
		<table class="table table-striped table-sm table-bordered">
		<caption style="text-align:right; margin-right:10px;">Hirdetéseim</caption>
	<thead class="bg-light" >
		<tr>
			<th id="bordbfs">Cím</th>
			<th id="bordth">Márka</th>
			<th id="bordth">Állapot</th>
			<th id="bordth">Ár</th>
			<th id="bordjfs" colspan="3">Feladás dátuma</th>
		</tr>
	</thead>
	<tbody>
		<% adsById.forEach( ad => { %>
		<tr>
			<td id="bordbsz"><%= ad.title %></td>
			<td><%= ad.brand %></td>
			<td><%= ad.state %></td>
			<td><%= ad.price %>Ft</td>
			<td><%= ad.date %></td>
			<td style="text-align:center;"><a class="btn btn-success btn-sm" href="/hirdetes/<%= regUser._id %>/edit/<%= ad._id %>"><i class="fa fa-edit"></i>Módosítás</a></td>
			<td style="border-right:2px groove; text-align:center;"><a class="btn btn-danger btn-sm text-white" href="/hirdetes/<%= regUser._id %>/delete/<%= ad._id %>">Törlés</a></td>
		</tr>
		<tr>
			<th style="height:70px; border-bottom:2px solid #000000; border-left:2px groove;">Leírás:</td>
			<td colspan="6" style="height:70px; border-bottom:2px solid #000000; border-right:2px groove;"><%= ad.description %></td>
		</tr>
			<% }); %>
	<tbody>
	</table>
	</div>
	<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
	</div>
</body>
<%- include('footer') -%>
</html>
