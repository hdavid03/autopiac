<%- include('menu') -%>
	<div class="card card-header"><div class="container main-content">
		<h3>Töltse ki azokat a mezőket, ahol módosítani szeretne, majd nyomja meg a Megerősítés gombot!</h3>
			<% if(typeof error !== 'undefined') { %>
				<h4 class="badge badge-warning"><%= error %></h4>
			<% } %>
	</div></div>
<div class="container main-content">
		<br/>
			<div class="card card-sm" id="cardpad">
				<form action="/profil/<%= regUser._id %>/edit" class="card-body" method="post" name="edit">
				<label for="vnev" id="textl">Vezetéknév:</label>
				<input type="text" name="vnev" id="vnev" value="<%= regUser.lname %>" />
			<br/>
				<label for="knev" id="textl">Keresztnév:</label>
				<input type="text" name="knev" id="knev" value="<%= regUser.fname %>" />
			<br/>
				<label for="email" id="textl">E-mail:</label>
				<input type="text" name="email" id="email" value="<%= regUser.email %>" />
			<br/>
				<label for="lakhely" id="textl">Lakhely:</label>
				<input type="text" name="lakhely" id="lakhely" value="<%= regUser.city %>" />
			<br/>
				<label for="szam" id="textl">Telefonszám:</label>
				<input type="text" name="szam" id="szam" value="<%= regUser.phone %>" />
			<br/>
				<label for="passwd" id="textl">Jelszó:</label>
				<input type="password" name="passwd" id="passwd" value="<%= regUser.passwd %>" />
			<br/>
				<label for="passwdagain" id="textl">Jelszó újra:</label>
				<input type="password" name="passwdagain" id="passwdagain" value="<%= regUser.passwd %>" />
			<br/>
				<input type="submit" class="btn btn-primary" name="edituser" value="Módosítás" />
				</form>
			</div>
		<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</div>
</body>
	<%- include('footer') -%>
</html>
