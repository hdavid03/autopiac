<%- include('menu') -%>
		<link rel="stylesheet" href="style.css">
		<div class="container main-content">
			<div class="container footer-content">
				<div class="container bg-color" >
					<head>
						<title>Új hirdetés feladása</title>
						<h1>Adjon fel hirdetést!</h1>
					</head>
				</div>
				<form action="/hirdetes/:iduser/hirdetesfeladas" method="post" name="ad">
					<div class="card" id="cardpad">
					<fieldset>
						<div class="card-header">
							<legend>A hirdetés címe</legend>
							<input class="form-control-md" type="text" name="cim" cols="45" rows="1" placeholder="(max 90 karakter)" required value="" maxlength="90"></textarea>
						</br>
						</div>
					</fieldset>
						<div class="card-body">
						</br>
					<fieldset>
						<legend>Az autó adatai</legend>
						<label for="marka" id="textl">Neve:</label>
						<input class="form-control-md" id="textl" type="text" name="marka" required value="" maxlength="40" />
						<br/>
						<label for="allapot" id="textl">Állapota:</label>
						<select class="form-control-md" style="width:14%" name="allapot" size=1>
							<option value="normal">normál</option>
							<option value="ujszeru" selected>újszerű</option>
							<option value="viseletes">viseletes</option>
							<option value="serult">sérült</option>
						</select>
						<br/>
						<label id="textl" for="ar">Ár (Ft):</label>
						<input id="textl" class="form-control-md" type="text" name="ar" required value="" placeholder="csak egész szám pl.:500000" maxlength="8" pattern="[0-9]{1,}" />
					</fieldset>
					</br>
					</div>
						<div class="card-footer">
							<fieldset>
								<legend>Leírás (nem kötelező)</legend>
								<textarea style="width:60%;" class="form-control" name="leiras"  cols="70" rows="4" placeholder="(max 350 karakter)" maxlength="350"></textarea>
							</fieldset>
							<br/>
							<input class="btn btn-primary form-control-lg"  type="submit" value="Hirdetésfeladás" name="ujad" />
						</div>
					</div>
				</form>
				<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
				<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
				<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
			</div>
		</div>
	</body>
<%-include('footer')-%>
</html>

