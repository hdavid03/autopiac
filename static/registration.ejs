<body>
	<div class="container main-content">
	<div class="container footer-content">

		<form class="card" id="cardpad" action="insertuser.html" method="post" name="reg">
			<fieldset>
				<legend>Név</legend>
				<div class="form-group">
					<label for="vnev">Vezetéknév:</label>
					<input id="textl" class="form-control-md" type="text" name="vnev" required value="" maxlength="25" />
					<label id="textr" for="knev" style="padding-left:40px;">Keresztnév:</label>
					<input id="textl" class="form-control-md" type="text" name="knev" required value="" maxlength="25" />
				</div>
			</fieldset>
		</br>
			<fieldset>
				<legend>Lakhely</legend>
				<div class="form-group">
					<label for="lakhely">csak a települést kérjük:</label>
					<input id="textl" class="form-control-md" type="text" name="lakhely" required value="" maxlength="55" />
				</div>
			</fieldset>
		</br>
			<fieldset>
				<legend>Telefonszám</legend>
				<div class="form-group">
					<input  id="textl" class="form-control-md" type="text" name="szam" title="(mobiltelefon)" placeholder="+36-00-1234567" required value="" maxlength="14" />
				</div>
		</fieldset>
		<br/>
			<fieldset>
				<legend>A belépéshez szükséges adatok</legend>
				<div class="form-group">
					<label id="stextl" for="email">E-mail cím:</label>
					<input class="form-control-md" type="text" name="email" required value="" maxlength="40" />
				<br/>
					<label id="stextl" for="jelszo">Jelszó:</label>
					<input class="form-control-md" type="password" name="jelszo" title="legalább 8 karakter, legyen benne szám, kis és nagy betű is" required value="" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" maxlength="45" />
				<br/>
					<label id="stextl" for="jelszoujra">Jelszó újra:</label>
					<input class="form-control-md" type="password" name="jelszoujra" required value="" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" maxlength="45" />
				</div>
			</fieldset>
		</br>
			<div class="card-footer-md">
				<input class="btn btn-primary" type="submit" value="Megerősítés" name="ujfiok" />
			</div>
